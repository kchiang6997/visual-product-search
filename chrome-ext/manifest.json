{
  "name": "Screenshot Visual Search",
  "version": "1.3",
  "description": "Take a screenshot and crop an image to search for it on Amazon",
  "background": {
    "persistent": false,
    "scripts": ["jquery-3.2.1.min.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "a9_logo.png",
    "default_title": "Take a screen shot!",
    "js": ["jquery-3.2.1.min.js", "window.js"]
  },
  "permissions": [
    "activeTab",
      "tabs",
      "background",
      "http://*/*",
      "https://*/*",
      "<all_urls>"
  ],
  "manifest_version": 2
}
